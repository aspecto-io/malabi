{
    "name": "tests-runner",
    "version": "0.0.1-alpha.1",
    "description": "run remote tests on 'service-under-test'",
    "repository": "https://github.com/aspecto-io/malabi",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "test": "ts-mocha --paths \"./test/*.ts\" --require \"./test/tracing.ts\" --timeout 10000",
        "test:jaeger": "OTEL_EXPORTER_JAEGER_AGENT_HOST=\"localhost\" OTEL_EXPORTER_JAEGER_AGENT_PORT=6832 yarn test"
    },
    "dependencies": {
        "axios": "^0.21.1"
    },
    "devDependencies": {
        "typescript": "^4.2.4",
        "malabi": "^0.0.6-alpha.1",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^9.0.0",
        "chai": "^4.3.4",
        "mocha": "^9.1.3",
        "ts-mocha": "^8.0.0"
    }
}
