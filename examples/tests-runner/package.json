{
    "name": "tests-runner",
    "version": "0.0.1-alpha.1",
    "description": "run remote tests on 'service-under-test'",
    "repository": "https://github.com/aspecto-io/malabi",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "run": "node -r esm -r \"./test/tracing.js\" ./test/main.js",
        "test:mocha": "mocha --recursive \"./test/*.ts\" --require esm --require \"./test/tracing.js\" ",
        "test:mocha-no-require": "mocha --recursive \"./test/*.ts\" --require esm",
        "test:mocha2": "MALABI_STORAGE_BACKEND=InMemory ts-mocha --paths \"./test/*.ts\" --require \"./test/tracing.ts\""
    },
    "dependencies": {
        "axios": "^0.21.1",
        "malabi": "^0.0.6-alpha.1",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@types/expect": "^24.3.0",
        "@types/mocha": "^9.0.0",
        "chai": "^4.3.4",
        "esm": "^3.2.25",
        "mocha": "^9.1.3",
        "ts-mocha": "^8.0.0"
    }
}
